<table>
    <% provide(:title,'登录') %>
    <% if flash[:alert] %>
        <p style="text-align: center;color: red"><%= flash[:alert] %></p>
    <% end %>
    <%= form_tag do  %>
        <div class="span4">
            <tr>
              <td>登录账户：</td>
              <td><%= text_field_tag :name, params[:name] %></td>
            </tr>
            <tr>
              <td>登录密码：</td>
              <td><%= password_field_tag :password, params[:password] %></td>
            </tr>
            <tr>
              <td colspan="2" style="text-align: center">
                <%= submit_tag '登录' ,class:'btn btn-primary' %>
              </td>
            </tr>
            <tr>
              <td colspan="2"><p>没有账号？<a href="../regist" style="color: red">点击注册！</a></p></td>
            </tr>
        </div>
    <% end %>
</table>