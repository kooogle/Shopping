<h2>用户列表</h2>
<% if notice %>
    <p style="text-align: center"><%= notice %></p>
<% end %>

<table>
  <tr>
    <th>用户名</th>
    <th>登录名</th>
    <th>出生日期</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.name %></td>
    <td><%= user.birthday %></td>
    <td><%= link_to 'Show', user ,class:'btn btn-primary' %></td>
    <td><%= link_to 'Edit', edit_user_path(user) ,class:'btn btn-primary'%></td>
    <td><%= link_to 'Destroy', user, confirm: '确定删除么?', method: :delete, class:'btn btn-danger'%></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path ,class:'btn btn-warning' %>
